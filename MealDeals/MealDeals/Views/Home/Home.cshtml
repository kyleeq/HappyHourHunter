@{
    //Layout = null;
    ViewBag.Title = "Home";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>MealDeals</title>

    <!-- Favicon -->
    <link rel="icon" href="~/Content/favicon.ico">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lobster|Luckiest+Guy|Oxygen" rel="stylesheet">
    <!--Bootstrap CSS-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!--Bootstrap JS-->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <!--Bootstrap CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <!--Project CSS-->
    <link rel="stylesheet" href="~/Content/MealDealsHome.css">
</head>

<body>
    <section id="Navbar">

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">MealDeals</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Specials<span class="sr-only">(current)</span></a>
                    </li>
                    <li> @Html.ActionLink("Map", "MapAsync", "Home")</li>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Profile
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">Food Preferences</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Contact</a>
                            <a class="dropdown-item" href="#">Settings</a>
                            <a class="dropdown-item" href="#">Log out</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>



    </section>

    <section id="Carousel">
        <div id="GroupCapCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="header-objects">
                    <h1 class="homepage-header">MealDeals</h1>
                    <button type="button" class="btn btn-outline-dark btn-lg signup">Signup</button>
                    @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
                    <button type="button" class="btn btn-outline-light btn-lg login">Login</button>
                    @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })

                </div>

                <div class="carousel-item active" data-interval="3000">
                    <img src="~/Content/Grotto.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item" data-interval="4000">
                    <img src="~/Content/HappyHourCheers.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item" data-interval="4000">
                    <img src="~/Content/PingPong.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item" data-interval="4000">
                    <img src="~/Content/Bartender.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item" data-interval="4000">
                    <img src="~/Content/TwoMenHappyHour.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
        </div>
        </div>
    </section>

    <section id="Highlights">
        <div class="row highlights-row">
            <div class="Highlight-box col-lg-4">
                <i class="homepage-icon fas fa-bullseye fa-4x"></i>
                <h3 class="homepage-h3">Easy to use</h3>
                <p class="homepage-description">Find great happy hour deals and specials</p>
            </div>
            <div class="Highlight-box col-lg-4">
                <i class="homepage-icon fas fa-users fa-4x"></i>
                <h3 class="homepage-h3">User-interface driven</h3>
                <p class="homepage-description">Your interactions help keep data current</p>
            </div>
            <div class="Highlight-box col-lg-4">
                <i class="homepage-icon fas fa-pepper-hot fa-4x"></i>
                <h3 class="homepage-h3">Guaranteed to work</h3>
                <p class="homepage-description">Only see the deals that matter to you</p>
            </div>
        </div>
        <div class="highlight-p-div">
            <div class="Highlight-paragraph col-lg-4">
                <h3 class="homepage-h2">We fill in the gap</h3>
                <p class="homepage-paragraph">
                    Have you been having problems finding a great deal on food in your area during lunch?
                    Maybe you want to unwind on a Friday afternoon after a long week with drinks with friends?
                </p>
            </div>
        </div>
    </section>

    <section id="Footer">
        <div class="footer-objects">

        </div>

    </section>





</body>

</html>

