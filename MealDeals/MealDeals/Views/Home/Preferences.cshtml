@{
    Layout = null;
    ViewBag.Title = "Preferences";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>MealDeals</title>

    <!-- Favicon -->
    <link rel="icon" href="~/Content/favicon.ico">
    <!-- FontAwesome -->
